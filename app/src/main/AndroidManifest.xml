<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bahnhoefe.deutschlands.bahnhofsfotos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MapsAcitivity"
            android:label="@string/maps_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.MainActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.MapsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.MainActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.DetailsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyDataActivity"
            android:label="@string/title_activity_my_data"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.MainActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.MyDataActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.MainActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.GalleryActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ViewImageActivity"
            android:label="@string/title_view_image"
            android:parentActivityName=".GalleryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.GalleryActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.ViewImageActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapsAllAcitivity"
            android:label="@string/maps_all_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.bahnhoefe.deutschlands.bahnhofsfotos.MainActivity" />

            <intent-filter>
                <action android:name="de.bahnhoefe.deutschlands.bahnhofsfotos.MapsAllActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--debug-KEY-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_debug_key" />

        <!--release-KEY-->
        <!--<meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_release_key" />-->
        <service
                   android:name=".NearbyNotificationService"
                   android:enabled="true"
                   android:exported="false"></service>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="de.bahnhoefe.deutschlands.bahnhofsfotos.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <service
            android:name=".NearbyNotificationService"
            android:enabled="true"
            android:exported="false"></service>
    </application>

</manifest>