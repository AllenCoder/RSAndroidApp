<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="-10dp"
        android:left="-10dp"
        android:right="-10dp"
        android:bottom="0dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="#810025"
                android:endColor="#5A001A"
                android:startColor="#9f0c35"
                android:type="linear" />
            <stroke
                android:width="10dp"
                android:color="#D0C332"/>
        </shape>
    </item>
</layer-list>

